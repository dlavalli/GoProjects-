{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "timeout": 30
  },
  "logging": {
    "level": "info",
    "format": "json"
  },
  "cors": {
    "allowed_origins": ["*"],
    "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allowed_headers": ["Origin", "Content-Type", "Accept", "Authorization"],
    "exposed_headers": ["Content-Length"],
    "allow_credentials": true,
    "max_age": 12
  }
}